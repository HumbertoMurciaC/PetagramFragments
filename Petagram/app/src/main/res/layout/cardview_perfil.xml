<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv_mascota"
    android:layout_width="150dp"
    android:layout_height="150dp"
    android:layout_marginBottom="@dimen/activity_vertical_margin"
    card_view:cardCornerRadius="@dimen/corner_radius_cardview"
    android:layout_margin="5dp">

    <LinearLayout
        android:id="@+id/dogImg"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/Img_Perfil"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:src="@drawable/perro1"/>

        <LinearLayout
            android:layout_below="@id/dogImg"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@color/colorAccent">


            <TextView
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="40dp"
                android:id="@+id/tv_LikesPerfil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Numero_Likes"
                android:textStyle="bold"
                android:textSize="25dp"
                android:textColor="@color/black"/>
            <ImageView
                android:layout_marginLeft="10dp"
                android:id="@+id/Hueso"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/dog_bone_filled_50"/>
        </LinearLayout>

    </LinearLayout>


</android.support.v7.widget.CardView>