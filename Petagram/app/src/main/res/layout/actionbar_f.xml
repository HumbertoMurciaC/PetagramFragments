<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/action_bar2"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="@color/colorPrimary"
    android:elevation="@dimen/elevacion_actionbar"
    android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
    android:textAlignment="center"
    app:popupTheme="@style/ThemeOverlay.AppCompat.Light">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="@dimen/w_huella"
            android:layout_height="@dimen/h_huella"
            android:src="@drawable/cat_footprint_48"
            android:layout_gravity="center_vertical"
            />
        <TextView
            android:layout_marginLeft="40dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Titulo"
            android:textAlignment="center"
            android:textSize="@dimen/tam_titulo"
            android:layout_gravity="center_vertical"
            android:textStyle="bold"
            android:textColor="@color/black"/>

    </LinearLayout>

</android.support.v7.widget.Toolbar>